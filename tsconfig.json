{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "CommonJS",
    "moduleResolution": "node",            
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": ".",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}